<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="CL\ManualReindex\Block\Backend\Container" name="adminhtml.indexer.grid.container"/>
        </referenceContainer>
        <referenceBlock name="adminhtml.indexer.grid.grid.massaction">
            <arguments>
                <argument name="options" xsi:type="array">
                    <item name="mass_indexer" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Reindex</item>
                        <item name="url" xsi:type="string">*/indexer/reindexById</item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
